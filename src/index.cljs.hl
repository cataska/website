           (div :class "content"
                (ul :class "distro"
                    (participation-child {:link "https://telegram.me/joinchat/BN4J_AKwngu5hBPkRo5gYw"
                                          :color "#1793D1"
                                          :text "Telegram"})
                    (participation-child {:link "https://www.facebook.com/groups/clojure.taiwan"
                                          :color "#4870BC"
                                          :text "Facebook"})
