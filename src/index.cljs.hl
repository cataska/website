(defelem participation-child
  [{:keys [link color text]}]
  (li
   (a :href link
      :style (str "background: linear-gradient(#fff 1em, #fff calc(100% - 5px), " color " calc(100% - 5px));")
      (div :class "info"
           (strong :style (str "color: " color ";") text)))))

(html
 (generic-head)
 (body
  ;; (navbar-layout)
